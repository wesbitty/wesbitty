{
  "name": "wesbitty",
  "description": "We've Got Your WishList",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "packages/@wesjet/*",
    "packages/*",
    "apps/*",
    "examples/*",
    "tests"
  ],
  "author": "Wesbitty, Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesbitty/wesbitty.git"
  },
  "keywords": [
    "wesbitty",
    "platform",
    "e-commerce",
    "store"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "build:app": "turbo run build --filter={apps/web}",
    "dev": "npm run dev --workspace=apps/web",
    "lint": "turbo run lint",
    "prettier": "prettier --write .",
    "pre-commit": "lint-staged",
    "clean": "turbo run clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.16.6",
    "@types/jest": "^27.0.3",
    "babel-jest": "^27.3.1",
    "eslint": "^7.32.0",
    "eslint-plugin-wesjet": "^0.0.30",
    "husky": "^8.0.3",
    "jest": "^27.3.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "ts-patch": "^2.1.0",
    "tsx": "3.7.1",
    "turbo": "^1.8.5",
    "typescript": "^4.5.3"
  }
}
