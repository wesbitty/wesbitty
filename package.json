{
  "name": "wesbitty",
  "version": "0.0.0",
  "private": true,
  "description": "We've Got Your WishList",
  "keywords": [
    "ecommerce",
    "platform",
    "hosting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wesbitty/wesbitty.git"
  },
  "license": "Apache-2.0",
  "author": "Wesbitty Inc",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo run build --filter=./packages/ --filter=./apps/*",
    "build:app": "turbo run build --filter=web",
    "clean": "turbo run clean --no-cache",
    "copyright": "node ./scripts/licenseSourceCode.mjs",
    "dev": "turbo run dev --parrallel --continue --filter=web...",
    "format": "prettier --write .",
    "generate": "cd ./apps/web && pnpm prisma-generate",
    "git-reset": "git reset --hard HEAD",
    "lint": "eslint . --ext .ts --fix",
    "lint-package": "sort-package-json",
    "prepare": "husky install",
    "pscale-up": "cd apps/web && pscale connect wesbitty main",
    "release": "turbo run release",
    "test": "turbo run test --concurrency=1 --filter=[HEAD^1] --filter=./packages/*"
  },
  "lint-staged": {
    "*.{mts,cts,ts,tsx,yml,js,jsx,mjs,cjs,json,md,mdx,css}": [
      "pnpm format"
    ],
    "package.json": [
      "pnpm lint-package"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.58.0",
    "auto": "^9.50.1",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.11.0",
    "graceful-fs": "^4.2.9",
    "husky": "^8.0.3",
    "isbinaryfile": "^5.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0",
    "sort-package-json": "^1.51.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "turbo": "^1.9.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": "^16.13.0 || ^18.12.0"
  },
  "packageManager": "pnpm@7.13.5"
}
