{
  "private": true,
  "license": "Apache-2.0",
  "engines": {
    "node": "16.x || 18.x || 19.x"
  },
  "workspaces": [
    "apps/web",
    "packages/*",
    "examples/*",
    "tests"
  ],
  "author": "Wesbitty, Inc.",
  "scripts": {
    "prebuild": "npm run prebuild --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:app": "npm run build --workspace=apps/web",
    "build:examples": "npm run build --workspace=examples/*",
    "build:packages": "npm run build --workspace=packages/*",
    "dev": "npm run dev --workspace=apps/web",
    "prettier": "prettier --write .",
    "clean": "npm run clean --workspaces --if-present",
    "test": "jest"
  },
  "dependencies": {
    "@mdx-js/react": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.16.6",
    "@types/jest": "^27.0.3",
    "babel-jest": "^27.3.1",
    "jest": "^27.3.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "typescript": "4.8.4"
  }
}
