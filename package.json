{
  "name": "wesbitty",
  "version": "0.0.0",
  "private": true,
  "description": "We've Got Your WishList",
  "keywords": [
    "platform",
    "storage",
    "functions",
    "database",
    "wesbitty"
  ],
  "homepage": "https://wesbitty.org",
  "bugs": {
    "url": "https://github.com/wesbitty/wesbitty/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wesbitty/wesbitty.git"
  },
  "license": "Apache-2.0",
  "author": "Wesbitty Inc.",
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:app": "turbo run build --filter={apps/web}",
    "clean": "turbo run prebuild",
    "dev": "turbo run dev --filter={apps/web}",
    "postinstall": "patch-package",
    "lint": "eslint . --ext .ts --fix",
    "lint:package": "sort-package-json",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "prisma:generate": "cd ./apps/web && npm run prisma:generate",
    "prisma:up": "cd apps/web && pscale connect wesbitty main",
    "release": "npm run release --workspaces --if-present",
    "test": "turbo run test"
  },
  "lint-staged": {
    "package.json": [
      "npm run lint:package"
    ],
    "*.{mts,cts,ts,tsx,yml,js,jsx,mjs,cjs,json,md,mdx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.13.0",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "auto": "^10.3.0",
    "babel-jest": "^27.3.1",
    "browserslist": "^4.21.5",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^3.1.0",
    "eslint": "^8.32.0",
    "fs-extra": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^27.3.1",
    "lint-staged": "^13.2.0",
    "patch-package": "^6.4.7",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.1",
    "rimraf": "^5.0.0",
    "seedrandom": "^3.0.5",
    "sort-package-json": "^1.51.0",
    "ts-jest": "^27.0.7",
    "ts-node": "10.9.1",
    "ts-patch": "^2.1.0",
    "turbo": "^1.9.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "auto": {
    "plugins": [
      "npm",
      "release"
    ]
  }
}
