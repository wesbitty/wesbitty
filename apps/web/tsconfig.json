{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@wesbitty/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/components/*": ["components/*"],
      "~/Layouts/*": ["components/Layouts/*"],
      "~/Widget/*": ["components/Widget/*"],
      "~/data/*": ["wesbitty/data/*"],
      "~/utils/*": ["wesbitty/utils/*"],
      "wesjet/static": ["./.wesjet/static"],
      "~/lib/*": ["wesbitty/lib/*"],
      "~/styles/*": ["styles/*"],
      "~/types": ["wesbitty/types/index"],
      "~/types/*": ["wesbitty/types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".wesjet/static"
  ],
  "exclude": ["node_modules"]
}
